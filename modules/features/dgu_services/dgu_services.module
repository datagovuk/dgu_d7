function dgu_services_session_get($sid = null) {

// That was in D6, not sure if it's necessary
//  global $user;
//  if (!$sid) {
//    $sid = $user->sid;
//  }

  return db_select('sessions', 's')
    ->fields('s', array('uid'))
    ->condition('sid', $sid)
    ->execute()
    ->fetchField();
